<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/china_drawable_layout"
    tools:context=".ChinaActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FDF5F0">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical">

            <include
                android:id="@+id/china_main_page_toolbar"
                layout="@layout/app_bar_layout"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="217dp"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="44dp"
                android:layout_marginRight="44dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:layout_width="130dp"
                        android:layout_height="90dp"
                        android:layout_centerVertical="true"
                        android:background="@drawable/backgroundcorner">

                        <TextView
                            android:id="@+id/china_us_one_dollor"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:text="1 $"
                            android:textColor="@color/colorBlack"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:gravity="center"
                            android:layout_centerVertical="true"
                            />

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="35dp"
                            android:layout_toEndOf="@id/china_us_one_dollor"
                            android:layout_centerVertical="true"
                            android:src="@drawable/us_flag"/>

                    </RelativeLayout>


                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="100dp"
                    android:elevation="6dp"
                    android:background="@drawable/backgroundcorner">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/china_mm_rate"
                                android:layout_width="50dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="10dp"
                                android:textColor="#a40000"
                                android:textSize="20dp"
                                android:textStyle="bold"
                                android:background="@android:color/transparent"
                                android:gravity="center"
                                android:text="2850"
                                android:ems="10"
                                android:layout_weight="3"
                                android:inputType="number"/>
                            <TextView
                                android:layout_width="40dp"
                                android:layout_height="match_parent"
                                android:text="MMK"
                                android:textSize="17sp"
                                android:gravity="center"
                                android:textColor="@color/colorBlack"
                                android:layout_weight="1"
                                android:background="@android:color/transparent"/>

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:layout_marginRight="10dp"
                                android:src="@drawable/mm_flag"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"

                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/china_china_rate"
                                android:layout_width="50dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="10dp"
                                android:textColor="#a40000"
                                android:textSize="20dp"
                                android:textStyle="bold"
                                android:background="@android:color/transparent"
                                android:gravity="center"
                                android:text="6.78"
                                android:ems="10"
                                android:layout_weight="3"
                                android:inputType="numberDecimal"/>

                            <TextView
                                android:layout_width="40dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@android:color/transparent"
                                android:gravity="center"
                                android:text="Yuan"
                                android:textColor="@color/colorBlack"
                                android:textSize="17sp" />

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:layout_marginRight="10dp"
                                android:src="@drawable/ic_flag_for_flag_china"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/china_baht_rate"
                                android:layout_width="50dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="10dp"
                                android:textColor="#a40000"
                                android:textSize="20dp"
                                android:textStyle="bold"
                                android:background="@android:color/transparent"
                                android:gravity="center"
                                android:text="32.65"
                                android:ems="10"
                                android:layout_weight="3"
                                android:inputType="numberDecimal"/>
                            <TextView
                                android:layout_width="40dp"
                                android:layout_height="match_parent"
                                android:text="Baht"
                                android:textSize="17sp"
                                android:gravity="center"
                                android:textColor="@color/colorBlack"
                                android:layout_weight="1"
                                android:background="@android:color/transparent"/>

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:layout_marginRight="10dp"
                                android:src="@drawable/thailand_flag"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/china_dong_rate"
                                android:layout_width="50dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="3"
                                android:background="@android:color/transparent"
                                android:ems="10"
                                android:gravity="center"
                                android:inputType="number"
                                android:text="23450"
                                android:textColor="#a40000"
                                android:textSize="20dp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="40dp"
                                android:layout_height="match_parent"
                                android:text="Dong"
                                android:textSize="17sp"
                                android:gravity="center"
                                android:textColor="@color/colorBlack"
                                android:layout_weight="1"
                                android:background="@android:color/transparent"/>

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:layout_marginRight="10dp"
                                android:src="@drawable/vienam_flag"/>
                        </LinearLayout>

                    </LinearLayout>



                </RelativeLayout>
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="61dp"
                android:orientation="horizontal"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="44dp"
                android:layout_marginRight="44dp"
                android:background="@drawable/nocolorcorner">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/ic_flag_for_flag_china"
                    android:layout_gravity="center_vertical"/>

                <EditText
                    android:id="@+id/china_value_input"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="25dp"
                    android:background="@color/colorWhite"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="Input Value"
                    android:inputType="number"
                    android:padding="5dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="24dp">

                <Button
                    android:id="@+id/china_us_convert_button"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:text="USD"
                    android:textSize="20sp"
                    android:drawableBottom="@drawable/us_flag"
                    android:paddingBottom="20dp"/>
                <Button
                    android:id="@+id/china_thai_convert_button"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:text="Baht"
                    android:textAllCaps="false"
                    android:textSize="20sp"
                    android:drawableBottom="@drawable/thailand_flag"
                    android:paddingBottom="20dp"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="54dp">

                <Button
                    android:id="@+id/china_mm_convert_button"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:text="MMK"
                    android:textAllCaps="false"
                    android:textSize="20sp"
                    android:drawableBottom="@drawable/mm_flag"
                    android:paddingBottom="20dp" />

                <Button
                    android:id="@+id/china_vietnam_convert_button"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:text="Dong"
                    android:textAllCaps="false"
                    android:textSize="20sp"
                    android:drawableBottom="@drawable/vienam_flag"
                    android:paddingBottom="20dp"/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="bottom|right"
                android:paddingRight="5dp"
                android:text="UI Design By Kaung Htet Kyaw"
                android:textSize="11dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="5dp"
                android:gravity="bottom|right"
                android:paddingRight="5dp"
                android:text="Developed By Ant Bone Kyaw"
                android:textSize="11dp" />
        </LinearLayout>



    </ScrollView>


    <com.google.android.material.navigation.NavigationView
        android:id="@+id/china_navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:menu="@menu/navigation_menu"
        app:itemTextColor="@color/colorBlack"
        app:theme="@style/NavigationDrawerStyle"/>
</androidx.drawerlayout.widget.DrawerLayout>